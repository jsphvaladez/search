<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:id="@+id/MyActivity">





    <EditText
        android:id="@+id/nameText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter UTA search query here"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#ffe5eeff"
        android:layout_marginBottom="10dp"
        android:maxHeight="100dp" />



    <LinearLayout
        android:layout_row="2"
        android:layout_column="0">

        <EditText
            android:id="@+id/name2Text"
            android:layout_width="172dp"
            android:layout_height="fill_parent"
            android:hint="Taq your query"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#ffe5eeff"
            android:layout_gravity="left" />

        <ImageButton
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:id="@+id/imageButton"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/savefloppy"
        android:onClick="onAddClick" />


    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tagged Searches"
        android:id="@+id/textView3"
        android:layout_row="10"
        android:layout_column="0"
        android:background="#ffe5eeff"
        android:gravity="center_horizontal" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="299dp"
        android:id="@+id/listView"
        android:layout_row="11"
        android:layout_column="0"
        android:background="#ffe5eeff"
        android:divider="#ffff1b15"
        android:dividerHeight="6dp" />






</GridLayout>
